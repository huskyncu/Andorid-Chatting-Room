<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="31dp"
        android:layout_marginBottom="412dp"
        android:text="Name :"
        android:textSize="25sp" />
    <EditText
        android:id="@+id/et_connect_page_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="162dp"
        android:layout_marginBottom="398dp"
        android:hint="Please enter name..."
        android:text="Client1"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="33dp"
        android:layout_marginBottom="300dp"
        android:text="IP :"
        android:textSize="25sp" />


    <EditText
        android:id="@+id/et_connect_page_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="162dp"
        android:layout_marginBottom="290dp"
        android:hint="Please enter ip..."
        android:text="10.0.2.2"
        android:textSize="25sp" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="26dp"
        android:layout_marginBottom="199dp"
        android:text="Port :"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_connect_page_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="200dp"
        android:hint="Please enter port..."
        android:text="6100"
        android:textSize="25sp" />
    <!--when server & client both are emulator port = 6100-->

    <Button
        android:id="@+id/btn_connect_page_connect"
        android:layout_width="178dp"
        android:layout_height="86dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="58dp"
        android:text="Connect"
        android:textSize="20dp" />

</RelativeLayout>